<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.repository.user.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="symedit.repository.profile.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="symedit.repository.admin_profile.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
    </parameters>

    <services>
        <service id="symedit_user.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager">
            <argument>%symedit_user.model_manager_name%</argument>
        </service>

        <!-- User -->
        <service id="symedit.repository.user" class="%symedit.repository.user.class%">
            <argument type="service" id="symedit_user.entity_manager" />
            <argument type="service">
                <service
                    factory-service="symedit_user.entity_manager"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%symedit.model.user.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Profile -->
        <service id="symedit.repository.profile" class="%symedit.repository.profile.class%">
            <argument type="service" id="symedit_user.entity_manager" />
            <argument type="service">
                <service
                    factory-service="symedit_user.entity_manager"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%symedit.model.profile.class%</argument>
                </service>
            </argument>
        </service>

        <!-- Admin Profile -->
        <service id="symedit.repository.admin_profile" class="%symedit.repository.admin_profile.class%">
            <argument type="service" id="symedit_user.entity_manager" />
            <argument type="service">
                <service
                    factory-service="symedit_user.entity_manager"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata">
                    <argument>%symedit.model.admin_profile.class%</argument>
                </service>
            </argument>
        </service>
    </services>
</container>